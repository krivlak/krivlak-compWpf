<Window x:Class="compWpf.выборListвида"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:compWpf"
        mc:Ignorable="d"
        Title="выборListвида" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="*"/>
            <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <ListBox Name="lisBox1" Grid.Column="0"  SelectionMode="Single"/>
        <StackPanel Grid.Column="1" Orientation="Vertical" >
            <Button Name="выбрать" Content="Выбрать" Click="выбрать_Click" Width="60"  Margin="0,20,0,0" />
        </StackPanel>

    </Grid>
</Window>
