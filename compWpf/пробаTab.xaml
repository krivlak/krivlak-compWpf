<Window x:Class="compWpf.пробаTab"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:compWpf"
        mc:Ignorable="d"
        Title="пробаTab" Height="450" Width="800">
    <Grid>
        <TabControl>
           <TabItem Name="овощи" Header="Овощи">
                <StackPanel>
                      <Ellipse Height="20" Width="20" Fill="Black"/>
                      <TextBlock Margin="3">Картошка</TextBlock>
                 </StackPanel>
           </TabItem>
         <TabItem Name="фрукты" Header="Фрукты" >
                <StackPanel>
                    <Ellipse Height="30" Width="20" Fill="Black"/>
                    <TextBlock Margin="3">Апельсин</TextBlock>
                </StackPanel>
           </TabItem>
        </TabControl>
    </Grid>
</Window>
